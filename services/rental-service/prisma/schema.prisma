generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Locacao {
  idString        String    @id @default(uuid())
  
  clienteId       String
  veiculoId       String
  
  dataInicio      DateTime
  dataFimPrevisto DateTime
  
  // Campos de Devolução (Adicionados agora)
  dataEntrega     DateTime? // Null enquanto não devolver
  kmInicial       Float
  kmFinal         Float?    // Null enquanto não devolver
  valorTotal      Float?    // Null enquanto não devolver
  
  formaPagamento  String
  
  criadoEm        DateTime  @default(now())
  atualizadoEm    DateTime  @updatedAt

  @@map("locacoes")
}